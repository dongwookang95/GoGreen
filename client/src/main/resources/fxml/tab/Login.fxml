<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<AnchorPane xmlns:fx="http://javafx.com/fxml" xmlns="http://javafx.com/javafx"
            fx:controller="backend.controller.tab.LoginController" styleClass="one-size">
    <Pane id="one-header-wrapper">
        <ImageView fitHeight="100.0" fitWidth="100.0" id="one-logo">
            <Image url="@../../img/oak-icon.png"/>
        </ImageView>
        <Label text="GoGreen" id="one-title"/>
    </Pane>
    <Pane styleClass="one-txt-wrapper" id="one-usr-wrapper">
        <ImageView fitHeight="25.0" fitWidth="25.0" styleClass="one-txt-icon">
            <Image url="@../../img/user-icon.png"/>
        </ImageView>
        <TextField text="Username" fx:id="username" styleClass="one-txt-area"/>
    </Pane>
    <Pane styleClass="one-txt-wrapper" id="one-psw-wrapper">
        <ImageView fitHeight="25.0" fitWidth="25.0" styleClass="one-txt-icon">
            <Image url="@../../img/lock-icon.png"/>
        </ImageView>
        <PasswordField text="Password" fx:id="password" styleClass="one-txt-area"/>
    </Pane>
    <Pane id="one-login-submit-wrapper">
        <Label fx:id="logMessage" id="one-auth-message"/>
        <Button text="Login" fx:id="login" id="one-submit" mnemonicParsing="false"/>
    </Pane>
</AnchorPane>
