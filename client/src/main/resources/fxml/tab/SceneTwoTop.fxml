<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.Pane?>
<AnchorPane xmlns:fx="http://javafx.com/fxml" xmlns="http://javafx.com/javafx"
            fx:controller="backend.controller.HomeController" id="two-top-size">
    <ImageView fitHeight="100.0" fitWidth="100.0" id="two-top-logo" pickOnBounds="true" preserveRatio="true">
        <Image url="@../../img/oak-icon.png"/>
    </ImageView>
    <Button id="two-top-logout" mnemonicParsing="false" text="Logout" fx:id="logout" onAction="#logout"/>
    <Label id="two-top-title" fx:id="title"/>
    <Label id="two-top-user" text="User@1234" fx:id="user"/>

    <Pane styleClass="two-top-badge-wrapper" id="two-top-badge-wrapper-one">
        <ImageView fitHeight="25.0" fitWidth="25.0" styleClass="two-top-icon" pickOnBounds="true"
                   preserveRatio="true" fx:id="firstBadgeImage">
            <Image url="@../../img/badges/energy.png" />
        </ImageView>
        <Label styleClass="two-top-badge" text="Energy Master" fx:id="firstBadgeLabel"/>
    </Pane>

    <Pane styleClass="two-top-badge-wrapper" id="two-top-badge-wrapper-two">
        <ImageView fitHeight="25.0" fitWidth="25.0" styleClass="two-top-icon" pickOnBounds="true"
                   preserveRatio="true" fx:id="secondBadgeImage">
            <Image url="@../../img/badges/food.png" />
        </ImageView>
        <Label styleClass="two-top-badge" text="Food Master" fx:id="secondBadgeLabel"/>
    </Pane>
    <Pane styleClass="two-top-badge-wrapper" id="two-top-badge-wrapper-three">
        <ImageView fitHeight="25.0" fitWidth="25.0" styleClass="two-top-icon" pickOnBounds="true"
                   preserveRatio="true" fx:id="thirdBadgeImage">
            <Image url="@../../img/badges/transport.png" />
        </ImageView>
        <Label styleClass="two-top-badge" text="Transport Master" fx:id="thirdBadgeLabel"/>
    </Pane>
</AnchorPane>
